{{#each blogPosts as |blogPost| }}

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{blogPost.title}}</h5>
    <div id="bpid">"{{blogPost.id}}"</div>
    <h6 class="card-subtitle mb-2 text-muted">{{blogPost.user.name}} on {{format_date date_created}}</h6>
    <p class="card-text">{{blogPost.description}}</p>
  </div>
</div>


    <form class="form comment-form">
      <div class="form-group">
    
        <label>Add comment : </label>
        <textarea class="form-input" type="text" id="comment" name="newblog_id" /></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  {{/each}}  

<script src="../js/comment.js"></script>