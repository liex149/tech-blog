{{#each blogposts as |blogPost| }}

<form class="form update-form" id="{{blogPost.id}}">
    <div class="form-group">

        <div class="mb-3">
            <label for="title" class="form-label">Blog Title</label>
            <textarea class="form-control" id="title" rows="1">{{blogPost.title}}</textarea>
        </div>
    </div>
    <div class="form-group input-lg">

        <div class="mb-3">
            <label for="description" class="form-label">Content</label>
            <textarea class="form-control" id="description" rows="3">{{blogPost.description}}</textarea>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
           <button class="btn btn-danger delete" data-id="{{blogPost.id}}">DELETE</button>
    </div>

</form>
{{/each}}

<script src="../js/update.js"></script>
<script src="../js/delete.js"></script>