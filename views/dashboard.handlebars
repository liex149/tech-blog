<!-- Loop over each object in the projects array -->
{{#each blogPosts as |blogPost| }}

<div class="card" style="width: 20 rem;">
  <div class="card-body">
    <h1 class="card-title">{{blogPost.title}}</h1>
    <h6 class="card-subtitle mb-2 text-muted">{{blogPost.user.name}} on {{format_date date_created}}</h6>
    <p class="card-text">{{blogPost.description}}</p>
    <button class="btn btn-primary">Edit</button>
  </div>
</div>

</div>

{{/each}}

<div class="card" style="width: 20 rem;">
  <a href="/newblog" class="btn btn-primary">New Blog Post</a>
</div>